CC = gcc
SRC = main.c school.c
NAME = school
FLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: $(OBJ)
	$(CC) $(FLAGS) $(SRC:.c=.o) -o $(NAME)

%.o: %.c m.h
	$(CC) -c $< -o $@

.PHONY: clean
clean:
	$(RM) *~ $(NAME)

.PHONY: oclean
oclean:
	$(RM) $(OBJ)

.PHONY: fclean
fclean: clean oclean

.PHONY: re
re: fclean all
